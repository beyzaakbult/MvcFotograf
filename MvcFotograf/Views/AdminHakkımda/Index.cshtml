@model MvcFotograf.Models.TBLHAKKIMIZDA

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<h2>HAKKIMIZDA GÜNCELLE</h2>
<br />
@using (Html.BeginForm("Index", "AdminHakkımda", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.BASLIK)
        @Html.TextAreaFor(x => x.BASLIK, 15, 1, new { @class = "form-control" })
    </div>

    <br />

    <div class="form-group">
        @Html.LabelFor(x => x.ICERIK)
        @Html.TextAreaFor(x => x.ICERIK, 15, 1, new { @class = "form-control" })
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.RESIM)
        <input class="form-control"
               id="resim"
               type="file"
               onchange="$('.resim')[0].src = window.URL.createObjectURL(this.files[0])"
               name="GELENRESIM" />
        <br />
        <img class="resim"
             width="250"
             height="200"
             style="border:1px solid red;"
             src="~/Resimler/@Model.RESIM" />
    </div>

    <br />
    <button class="btn btn-primary"> Güncelle</button>
}
<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 750,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
@if (TempData["guncelle"] != null)
{
    <script>

        toastr["warning"]("HAKKIMDA YAZISI GÜNCELLENDİ!!", "BİLGİ")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}



