
@using MvcFotograf.Models
@model List<TBLBLOGYORUM>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/Content/PagedList.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>


<h2>BLOG YORUMLAR</h2>

<table class="table table-bordered">

    <tr>
        <td>ID</td>
        <td>ADSOYAD</td>
        <td>YORUM</td>
        <td>DURUM</td>
        <td>TARIH</td>
        <td>SİL</td>
        <td></td>
    </tr>

    @foreach (var x in Model)
    {
        if (x.DURUM == false)

        {
            <tr style="background-color:azure">
                <td>@x.ID</td>
                <td>@x.ADSOYAD</td>
                <td>@x.YORUM</td>
                <td>@x.DURUM</td>
                <td>@Convert.ToDateTime(x.TARIH).ToString("dd/MM/yyyy")</td>
                <td>@Html.ActionLink("SİL", "Sil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz');" })</td>
                <td><a href="/AdminBlogYorum/Gizle/@x.ID" class="btn btn-warning">PASİF</a></td>
            </tr>
        }
        else
        {
            <tr style="background-color:aquamarine">
                <td>@x.ID</td>
                <td>@x.ADSOYAD</td>
                <td>@x.YORUM</td>
                <td>@x.DURUM</td>
                <td>@Convert.ToDateTime(x.TARIH).ToString("dd/MM/yyyy")</td>
                <td>@Html.ActionLink("SİL", "Sil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz');" })</td>
                <td><a href="/AdminBlogYorum/Gizle/@x.ID" class="btn btn-success">AKTİF</a></td>
            </tr>
        }

    }

</table>

@if (TempData["sil"] != null)
{
    <script>

        toastr["warning"]("YORUMUNUZ SİLİNDİ!!")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}


