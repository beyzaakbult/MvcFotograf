@using MvcFotograf.Models
@model List<TBLHIZMETLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>HİZMETLER</h2>
<br />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>

<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->

        <a href="/AdminHizmetler/Ekle" class="btn btn-dark">YENİ HİZMET EKLE</a>

        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary"></h6>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>RESIM</th>
                            <th>BASLIK</th>
                            <th>ICERIK</th>
                            <th>SİL</th>
                            <th>GÜNCELLE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ID</td>
                                <td><img src="../Resimler/@x.RESIM" width="100" height="85" /></td>
                                <td>@x.HIZMETBASLIK</td>
                                <td>@x.HIZMETICERIK</td>
                                <td>@Html.ActionLink("SİL", "Sil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Emin misiniz?');" })</td>
                                <td><a href="/AdminHizmetler/Guncelle/@x.ID" class="btn btn-sm btn-primary">GÜNCELLE</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
@if (TempData["ekle"] != null)
{
    <script>

        toastr["warning"]("HİZMETLER EKLENDİ")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

@if (TempData["guncelle"] != null)
{
    <script>

        toastr["warning"]("HİZMETLER GÜNCELLENDİ")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}


