<!-- Services Option Section Begin -->
<section class="services-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-title">
                    <h2>SIKCA SORULAN SORULAR</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model.ssslistesi)
            {
                <div class="col-lg-6">
                    <div class="so-item">
                        <div class="so-title">
                            <div class="so-number">@x.ID</div>
                            <h5>@x.SORU</h5>
                        </div>
                        <p>
                            @x.CEVAP
                        </p>
                    </div>

                </div>
            }
        </div>
    </div>
</section>
