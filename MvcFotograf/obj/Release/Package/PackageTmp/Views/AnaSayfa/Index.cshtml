<!-- Categories Section Begin -->
<section class="categories-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="section-title">
                    <h2>KATEGORİLER</h2>
                    <p>

                    </p>
                </div>
            </div>

        </div>

        <div class="categories-slider owl-carousel">

            @foreach (var x in Model.kategorılistesi)
            {
                <div class="cs-item">
                    <div class="cs-pic set-bg" data-setbg="../KategoriResim/@x.RESIM"></div>
                    <div class="cs-text">
                        <h4>@x.ACIKLAMA</h4>

                    </div>
                </div>
            }


        </div>
    </div>
</section>
