@using MvcFotograf.Models
@model Class1

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KullanıcıLayout.cshtml";
}


<section class="hero-section">
    <div class="hs-slider owl-carousel">
        @foreach (var x in Model.sliderlistesi)
        {
            <div class="hs-item set-bg" data-setbg="../SlıderResimler/@x.RESIM">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hs-text">
                                <h2>@x.BASLIK</h2>
                                <p>
                                    @x.ACIKLAMA
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</section>
