@model MvcFotograf.Models.TBLSSS
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SIK SORULAN SORULARI EKLE</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>



@using (Html.BeginForm("Ekle", "AdminSSS", FormMethod.Post, new { enctype = "multipart/form-data" }))

{


    <div class="form-group">

        @Html.LabelFor(x => x.SORU)
        @Html.TextBoxFor(x => x.SORU, new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(x => x.CEVAP)
        @Html.TextBoxFor(x => x.CEVAP, new { @class = "form-control" })

    </div>


    <button class="btn btn-primary">EKLE</button>
}

@if (TempData["ekle"] != null)
{
    <script>

        toastr["error"]("Bir resim dosyası seçmelisiniz!!")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}


