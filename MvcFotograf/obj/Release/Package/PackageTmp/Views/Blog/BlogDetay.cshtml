<section class="blog-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var x in Model.bloglistesi)
                {
                    <div class="blog-details-text">
                        <div class="blog-hero set-bg" data-setbg="/Resimler/@x.RESIM " height="10"></div>
                        <br />
                        <br />
                        <div class="bd-title">

                            <h2>@x.BASLIK</h2>

                        </div>
                        <div class="bd-top-text">
                            <p>
                                @x.ICERIK
                            </p>
                        </div>


                    </div>

                }
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="blog-details-text">
                    <div class="bd-comment-form">
                        <div class="row">
                            @Html.Action("PartialBlogYorum","Blog")
                            @Html.Action("PartialBlogYorumYaz","Blog")
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>