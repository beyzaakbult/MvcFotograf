@using MvcFotograf.Models
@model List<TBLILETISIM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KullanıcıLayout.cshtml";
}

<section class="contact-section spad">
    <div class="container" style="margin-top:50px;">
        <div class="row">
              <div class="col-lg-6 col-md-6">

                    <div class="contact-text">

                        <h3>İletişim Bilgileri</h3>

                        <div class="ct-item">
                            <div class="ct-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="ct-text">
                                <h5>ADRES</h5>
                                <p>İZMİR</p>
                            </div>
                        </div> 
                        <div class="ct-item">
                            <div class="ct-icon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="ct-text">
                                <h5>EMAIL</h5>
                                <p>beyzaakbulut49@gmail.com</p>
                            </div>
                        </div>
                       
                    </div>
                    
                </div>
            
            <div class="col-lg-6 col-md-6">
                <div class="contact-form">
                    <h3>Benimle İletişime Geçmek İster misin?</h3>
                    <div style="color:red;">
                       @if (ViewBag.Success == true)
                    {
                        <span>Mesajınız başarıyla gönderilmiştir.</span>
                    }
                    </div>
                    <form method="post">
                        <input type="text" class="form-control" id="name" placeholder="Ad Soyad" name="AdiSoyadi" required="required" data-validation-required-message="Lütfen isim giriniz">
                        <input type="text" class="form-control" id="subject" placeholder="Email" name="Email" required="required" data-validation-required-message="Lütfen Email Giriniz">
                        <input type="text" class="form-control" id="subject" placeholder="Konu" name="Subject" required="required" data-validation-required-message="Lütfen Konu Giriniz">
                        <textarea class="form-control" id="message" placeholder="Mesaj" name="Message" required="required" data-validation-required-message="Mesaj kısmını boş bırakmayınız"></textarea>
                        <button type="submit" class="site-btn" id="sendmessagebutton">GÖNDER</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

